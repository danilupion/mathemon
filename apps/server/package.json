{
  "name": "@mathemon/server",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Dani Lupi√≥n",
    "email": "danilupion@gmail.com"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start:dev": "nodemon --watch src --watch config -e ts,json --exec 'ts-node --esm --project tsconfig.dev.json ./src/server.ts'",
    "start:prod": "ts-node --esm --project tsconfig.json ./src/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:check": "tsc -p tsconfig.json --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint:fix": "eslint -c .eslintrc.json 'src/**/*.ts' --fix",
    "lint": "eslint -c .eslintrc.json 'src/**/*.ts'",
    "prettify": "prettier --write  \"./src/**/*.{ts,tsx,json}\"",
    "command": "ts-node --esm --project tsconfig.json ./src/commands/index.ts"
  },
  "dependencies": {
    "@mathemon/common": "1.0.0",
    "@mathemon/poke-api": "1.0.0",
    "@mathemon/turbo-server": "1.0.0",
    "chalk": "^5.2.0",
    "config": "^3.3.8",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "mongoose": "^6.9.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.5.4",
    "ts-node": "^10.9.1",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "babel-jest": "^29.4.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.1",
    "jwt-decode": "^3.1.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "src/**/*.{js,cjs}": [
      "yarn prettify"
    ],
    "src/**/*.{ts,json}": [
      "yarn prettify",
      "yarn lint:fix --max-warnings=0",
      "yarn test"
    ]
  }
}
