apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ include "mathemon-server.fullname" . }}
  labels:
    {{- include "mathemon-server.labels" . | nindent 4 }}
  annotations:
    nginx.ingress.kubernetes.io/use-regex: "true"
  {{- with .Values.ingress.annotations }}
    {{- toYaml . | nindent 4 }}
  {{- end }}
spec:
  ingressClassName: {{ .Values.ingress.ingressClassName }}
  tls:
    - hosts:
        - {{ .Values.ingress.host }}
      secretName: {{ .Values.ingress.host }}-tls-secret
  rules:
    - host: {{ .Values.ingress.host }}
      http:
        paths:
          - path: /api
            pathType: Prefix
            backend:
              service:
                name: {{ include "mathemon-server.fullname" . }}
                port:
                  number: {{ .Values.service.port }}
          - path: /oauth
            pathType: Prefix
            backend:
              service:
                name: {{ include "mathemon-server.fullname" . }}
                port:
                  number: {{ .Values.service.port }}
          - path: /tokens
            pathType: Prefix
            backend:
              service:
                name: {{ include "mathemon-server.fullname" . }}
                port:
                  number: {{ .Values.service.port }}
          - path: /websocket
            pathType: Prefix
            backend:
              service:
                name: {{ include "mathemon-server.fullname" . }}
                port:
                  number: {{ .Values.service.port }}
