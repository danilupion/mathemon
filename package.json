{
  "name": "mathemon",
  "private": true,
  "author": {
    "name": "Dani Lupi√≥n",
    "email": "danilupion@gmail.com"
  },
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "client:start:dev": "yarn workspace @mathemon/client start:dev",
    "server:start:dev": "yarn workspace @mathemon/server start:dev",
    "start:dev": "yarn parallel:run 'yarn client:start:dev' 'yarn server:start:dev'",
    "server:start:prod": "yarn workspace @mathemon/server start:prod",
    "poke-api:test:watch": "yarn workspace @mathemon/common test:watch",
    "common:test:watch": "yarn workspace @mathemon/common test:watch",
    "client:test:watch": "yarn workspace @mathemon/client test:watch",
    "server:test:watch": "yarn workspace @mathemon/server test:watch",
    "turbo-common:build": "yarn workspace @mathemon/turbo-common build",
    "turbo-client:build": "yarn workspace @mathemon/turbo-client build",
    "turbo-server:build": "yarn workspace @mathemon/turbo-server build",
    "poke-api:build": "yarn workspace @mathemon/poke-api build",
    "common:build": "yarn workspace @mathemon/common build",
    "client:build": "yarn workspace @mathemon/client build",
    "server:build": "yarn workspace @mathemon/server build",
    "libs:build": "yarn parallel:run 'yarn common:build' 'yarn poke-api:build'",
    "turbo:build": "yarn turbo-common:build && yarn parallel:run 'yarn turbo-client:build' 'yarn turbo-server:build'",
    "apps:build": "yarn parallel:run 'yarn client:build' 'yarn server:build'",
    "build": "./scripts/build.sh",
    "parallel:run": "./scripts/parallel-run.sh",
    "install:clean": "./scripts/install-clean.sh",
    "build:clean": "./scripts/build-clean.sh",
    "clean": "yarn parallel:run 'yarn install:clean' 'yarn build:clean'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.2"
  }
}
